<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.BaseMenuFragment"
             android:id="@+id/bottom_panel_main"
             android:background="@android:color/transparent"
             android:layout_width="match_parent"
             android:layout_height="40dip"
             android:layout_gravity="bottom"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent">

    <FrameLayout
            android:id="@+id/bottom_panel_menu"
            android:background="@color/daynight_backColor"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
                android:background="@color/daynight_backColor"
                android:layout_gravity="left"
                app:srcCompat="@drawable/empty_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10px"
                android:scaleType="fitXY"
                android:id="@+id/content_photo_button"
        />
    </FrameLayout>
    <ImageButton
            android:background="@color/daynight_backColor"
            android:layout_gravity="bottom|end"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/main_button"
            android:paddingVertical="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/logo300x80"
    />
</FrameLayout>


